<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".GameActivity">


    <RelativeLayout
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="75dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="60dp"
        android:background="@color/black">
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/nextElement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="342dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="560dp"
        android:background="@color/black">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/holdElement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="342dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="560dp"
        android:background="@color/black">
    </RelativeLayout>

    <TextView

        android:id="@+id/scoreCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="225dp"
        android:layout_marginHorizontal="150sp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Score: 0"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="325dp"
        android:layout_marginHorizontal="150sp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/hold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="325dp"
        android:layout_marginHorizontal="150sp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Hold"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/lines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="320dp"
        android:layout_marginHorizontal="150sp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Lines: 0"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/for_Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="120sp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="10dp"
        android:insetLeft="0dp"
        android:text="Пауза"
        android:onClick="to_main_on_the_game"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:background="@drawable/button"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="src_over"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10sp"
        android:layout_marginStart="345dp"
        android:layout_marginTop="230dp"
        android:background="#00FFFFFF"
        android:insetLeft="0dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10sp"
        android:layout_marginEnd="345dp"
        android:layout_marginTop="230dp"
        android:background="#00FFFFFF"
        android:insetLeft="0dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/down1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="250dp"
        android:background="#00FFFFFF"
        android:insetLeft="0dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/down2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="100dp"
        android:background="#00FFFFFF"
        android:insetLeft="0dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/left2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="340dp"
        android:layout_marginTop="440dp"
        android:background="#00FFFFFF"
        android:insetLeft="0dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/strela_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/right2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="330dp"
        android:background="#00FFFFFF"
        android:insetLeft="0dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/strela_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</RelativeLayout>