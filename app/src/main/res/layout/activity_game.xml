<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".GameActivity">


    <com.example.myapplication.views.GameFrame
        android:id="@+id/game_container"
        android:layout_width="270dp"
        android:layout_height="450dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="100dp"
        android:background="@color/black"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/game_status"
        android:layout_width="270dp"
        android:layout_height="450dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="GAME OVER"
        android:textColor="@color/text_color"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@id/game_container"
        app:layout_constraintEnd_toEndOf="@id/game_container"
        app:layout_constraintStart_toStartOf="@id/game_container"
        app:layout_constraintTop_toTopOf="@id/game_container" />

    <TextView

        android:id="@+id/game_score"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="100dp"
        android:gravity="left"
        android:text="Score: 0"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView

        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="10sp"
        android:layout_marginStart="260dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/game_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="320dp"
        android:layout_marginHorizontal="150sp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Lines: 0"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/game_ctl_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="120sp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="10dp"
        android:insetLeft="0dp"
        android:text="Пауза"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:onClick="Pause"
        android:textAllCaps="false"
        android:background="@drawable/button"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="src_over"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fire_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10sp"
        android:layout_marginStart="345dp"
        android:layout_marginTop="230dp"
        android:background="#00FFFFFF"
        android:insetLeft="0dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fire_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10sp"
        android:layout_marginEnd="345dp"
        android:layout_marginTop="230dp"
        android:background="#00FFFFFF"
        android:insetLeft="0dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/down_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="250dp"
        android:background="#00FFFFFF"
        android:insetLeft="0dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/down_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="100dp"
        android:background="#00FFFFFF"
        android:insetLeft="0dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/right_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="340dp"
        android:layout_marginTop="440dp"
        android:background="#00FFFFFF"
        android:insetLeft="0dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/strela_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/left_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="330dp"
        android:background="#00FFFFFF"
        android:insetLeft="0dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/strela_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</RelativeLayout>