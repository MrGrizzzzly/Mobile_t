<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".ListofleadersActivity">

    <Button
        android:id="@+id/for_Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120sp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:insetLeft="0dp"
        android:onClick="to_main"
        android:text="@string/esc"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/ListLeaders"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="24sp"
        android:background="@drawable/button"

        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_marginBottom="463dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <TableRow>
        <TextView
            android:id="@+id/id"
            android:layout_height="match_parent"
            android:layout_width="30sp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="@string/id"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="@string/user_name"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/score"
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:gravity="center"
            android:background="@drawable/button"
            android:text="@string/score"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/country"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/country"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/button"/>
        </TableRow>

    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="139dp"
        android:background="@drawable/button">
    </androidx.recyclerview.widget.RecyclerView>


    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120sp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/button"
        android:onClick="add_user"
        android:insetLeft="0dp"
        android:text="add"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>